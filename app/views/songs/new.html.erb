<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create Song</title>
  </head>
  <h2>Create a new song!</h2>
  <body>
    <%= form_tag("/songs") do %>
      <%= if @song.errors.any? %>
        <div id="error+explanation">
          <h2>There were some errors:</h2>
          <ul>
            <% @song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          
        </div>
    <% end %>
  </body>
</html>
